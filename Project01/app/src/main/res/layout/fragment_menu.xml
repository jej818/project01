<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <TextView
            android:id="@+id/textviewMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="메뉴"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textViewInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="김이화 (여/만 4세)"
            android:textSize="18dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/textViewMenu"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/btnEstimate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="측정하기"
            android:layout_marginTop="43dp"
            android:textSize="20dp"
            android:layout_below="@+id/textViewInfo"
            android:layout_centerHorizontal="true" />

        <Button
            android:id="@+id/btnGrowthInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="성장정보"
            android:layout_below="@+id/btnEstimate"
            android:textSize="20dp" />

    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp">
        <ImageView
            android:id="@+id/imageLogo"
            android:layout_margin="15dp"
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/logo"/>

        <EditText
            android:id="@+id/MainName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:hint="이름"
            android:layout_below="@id/imageLogo"/>

        <EditText
            android:id="@+id/MainBirth"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp"
            android:layout_below="@+id/editMainActivityName"
            android:hint="생년월일(8숫자)"/>
    </LinearLayout>


    <TextView
        android:id="@+id/Male"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="남"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/linearLayout1"/>
    <CheckBox
        android:id="@+id/Checkbox_male"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/linearLayout1"/>
    <TextView
        android:id="@+id/Female"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:textSize="20dp"
        android:text="여"
        android:layout_marginLeft="100dp"
        android:layout_below="@id/linearLayout1"/>
    <CheckBox
        android:id="@+id/Checkbox_female"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="1dp"
        android:layout_below="@id/linearLayout1"/>
    <Button
        android:id="@+id/btnMainLogin"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_below="@id/Female"
        android:layout_margin="10dp"
        android:text="등 록"
        android:layout_alignParentRight="true"
        android:background="#fd3270"/>
</RelativeLayout>